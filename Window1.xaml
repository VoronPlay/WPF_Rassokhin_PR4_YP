<Window x:Class="WPF_Rassokhin_PR4_YP.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Rassokhin_PR4_YP"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" Background="Aquamarine">
    <Window.Resources>
        <Style x:Key="BlackAndWhite">
            <Setter Property="Control.FontFamily" Value="Verdana" />
            <Setter Property="Control.Background" Value="Blue" />
            <Setter Property="Control.Foreground" Value="Orange" />
        </Style>
    </Window.Resources>
    <Grid>
        <WrapPanel>
            <Button Content="Одна из трёх колонок" Style="{StaticResource BlackAndWhite}" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="266.6"/>
            <Button Content="Одна из трёх колонок" Style="{StaticResource BlackAndWhite}" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Top" Height="100" Width="266.6"/>
            <Button Content="Одна из трёх колонок" Style="{StaticResource BlackAndWhite}" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Height="100" Width="266.6"/>
            </WrapPanel>
    </Grid>
</Window>
