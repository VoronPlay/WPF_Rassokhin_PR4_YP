                <TextBlock>Два</TextBlock>
                <TextBlock>Три</TextBlock>
                <TextBlock>Четыре</TextBlock>
            </ComboBox>
            <ComboBox Background="White" FontSize="20"  Grid.Column="1" Grid.Row="7" Grid.RowSpan="1" Grid.ColumnSpan="4" >
                <TextBlock>Один</TextBlock>
                <TextBlock>Два</TextBlock>
                <TextBlock>Три</TextBlock>
                <TextBlock>Четыре</TextBlock>
            </ComboBox>
            <ComboBox Background="White" FontSize="20"  Grid.Column="1" Grid.Row="3" Grid.RowSpan="1" Grid.ColumnSpan="3" >
